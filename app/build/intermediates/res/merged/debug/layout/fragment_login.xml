<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:padding="@dimen/margin_25"
    android:orientation="vertical"
    tools:context="com.uniquindio.android.electiva.campusuq.fragments.LoginFragment">

    <TextView
        style="@style/MiSeparador"/>

    <TextView
        android:id="@+id/txt_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:text="@string/compartir_facebook"
        android:textSize="@dimen/text_30"
        android:textStyle="bold"/>

    <TextView
        style="@style/MiSeparador"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/MiSeparador"/>

</LinearLayout>
