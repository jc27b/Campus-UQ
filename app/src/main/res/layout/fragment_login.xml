<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:padding="25dp"
    android:orientation="vertical"
    tools:context="com.uniquindio.android.electiva.campusuq.fragments.LoginFragment">

    <TextView
        style="@style/MiSeparador"/>

    <TextView
        android:id="@+id/txt_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:text="@string/compartir_facebook"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        style="@style/MiSeparador"/>

    <TextView
        android:id="@+id/txt_login_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:text="@string/compartir_twitter"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        style="@style/MiSeparador"/>

</LinearLayout>
