<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uniquindio.android.electiva.campusuq.fragments.NoticeDetailFragment">>

    <ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_0"
        android:layout_weight="1"
        android:contentDescription="@string/descripcion_imagen_detalle"
        android:src="@drawable/detalle_noticia" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_15">

            <TextView
                android:id="@+id/titulo_de_detalle_noticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/texto_titulo_de_noticia"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_de_detalle_noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_id_de_noticia"
                android:textSize="@dimen/text_20"
                android:layout_marginBottom="@dimen/margin_10"/>

            <TextView
                android:id="@+id/fecha_de_detalle_noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_fecha_de_noticia"
                android:textSize="@dimen/text_20"
                android:layout_marginBottom="@dimen/margin_15"/>

            <TextView
                android:id="@+id/descripcion_de_detalle_noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_detalle_de_noticia"
                android:textSize="@dimen/detalle_texto_descripciÃ³n"
                android:layout_marginBottom="@dimen/margin_30"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tam_90"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_compartir_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_100"
                    android:src="@drawable/facebook"
                    app:backgroundTint="#ffffff"
                    app:fabSize="normal"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:layout_marginRight="@dimen/margin_50"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_compartir_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_100"
                    android:src="@drawable/twitter"
                    app:backgroundTint="#ffffff"
                    app:fabSize="normal"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:layout_marginRight="@dimen/margin_50"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>